---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Our Offices - Screen HRM">
  <Header slot="header" />
  <section class="bg-gradient-to-b from-[#eaf0ff] to-white py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-extrabold text-brand-dark mb-8 text-center">
        Our Global Offices
      </h1>
      <p class="text-lg text-gray-600 mb-12 text-center">
        Screen HRM has offices strategically located to serve clients worldwide.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">        <!-- UK Headquarters -->
        <div class="bg-white rounded-2xl shadow-lg p-8 md:p-10 relative overflow-hidden">
          <div class="absolute top-0 right-0 p-3 bg-brand-primary/10 rounded-bl-xl z-0">
            <span class="text-sm font-bold text-brand-primary">HQ</span>
          </div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-brand-primary/20 rounded-full flex items-center justify-center text-brand-primary mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-brand-dark mb-2">Headquarters</h2>
            <h3 class="text-lg font-semibold text-brand-primary mb-4">United Kingdom</h3>
            
            <address class="not-italic text-gray-700 mb-6 space-y-2">
              <p>188 Mitcham Road</p>
              <p>London, United Kingdom</p>
              <p>SW17 9NJ</p>
            </address>
            
            <div class="space-y-3">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-primary mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href="mailto:info@screenhrm.com" class="text-gray-700 hover:text-brand-primary transition">info@screenhrm.com</a>
              </div>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-primary mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-gray-700">Tel: +44 7511227834</span>
              </div>
            </div>
            
            <a href="https://maps.google.com/?q=188+Mitcham+Road,+London,+SW17+9NJ,+United+Kingdom" target="_blank" rel="noopener noreferrer" class="inline-block mt-6 text-brand-primary hover:text-brand-accent transition flex items-center">
              <span>View on Google Maps</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>        <!-- Eastern Europe Office -->
        <div class="bg-white rounded-2xl shadow-lg p-8 md:p-10 relative overflow-hidden">
          <div class="absolute top-0 right-0 p-3 bg-brand-accent/10 rounded-bl-xl z-0">
            <span class="text-sm font-bold text-brand-accent">EU</span>
          </div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-brand-accent/20 rounded-full flex items-center justify-center text-brand-accent mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-brand-dark mb-2">Eastern Europe Office</h2>
            <h3 class="text-lg font-semibold text-brand-accent mb-4">Hungary, Budapest</h3>
            
            <address class="not-italic text-gray-700 mb-6 space-y-2">
              <p>1052 Budapest</p>
              <p>Deák Ferenc utca 17</p>
            </address>
            
            <div class="space-y-3">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-accent mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href="mailto:Mate.Abel@screenhrm.co.uk" class="text-gray-700 hover:text-brand-accent transition">Mate.Abel@screenhrm.co.uk</a>
              </div>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-accent mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-gray-700">Tel: +36 70 546 8706</span>
              </div>
            </div>
            
            <a href="https://maps.google.com/?q=1052+Budapest,+Deák+Ferenc+utca+17,+Hungary" target="_blank" rel="noopener noreferrer" class="inline-block mt-6 text-brand-accent hover:text-brand-primary transition flex items-center">
              <span>View on Google Maps</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>      <!-- Interactive Map -->
      <div class="mt-16">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-brand-dark">Find Us</h2>
          <div class="flex space-x-2">
            <button id="map-london" class="px-4 py-2 bg-brand-primary text-white rounded-lg text-sm font-medium hover:bg-brand-primary/90 transition">London Office</button>
            <button id="map-budapest" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-300 transition">Budapest Office</button>
          </div>
        </div>

        <div class="rounded-xl overflow-hidden shadow-lg h-96 bg-gray-100 relative">
          <iframe 
            id="map-iframe"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2486.0166170553747!2d-0.16885772355214348!3d51.43150117189377!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604880e4a7beb%3A0x9da2394e9be9bda9!2s188%20Mitcham%20Rd%2C%20London%20SW17%209NJ%2C%20UK!5e0!3m2!1sen!2sus!4v1716263714458!5m2!1sen!2sus" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-full"
            title="Screen HRM Office Locations">
          </iframe>
          <button id="fullscreen-btn" class="absolute bottom-4 right-4 bg-white p-2 rounded-lg shadow-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 011.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 011.414-1.414L15 13.586V12a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mapIframe = document.getElementById('map-iframe');
    const londonBtn = document.getElementById('map-london');
    const budapestBtn = document.getElementById('map-budapest');
    const fullscreenBtn = document.getElementById('fullscreen-btn');
    
    // Map URLs
    const londonMapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2486.0166170553747!2d-0.16885772355214348!3d51.43150117189377!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604880e4a7beb%3A0x9da2394e9be9bda9!2s188%20Mitcham%20Rd%2C%20London%20SW17%209NJ%2C%20UK!5e0!3m2!1sen!2sus!4v1716263714458!5m2!1sen!2sus";
    const budapestMapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2695.5378128688924!2d19.04813807723847!3d47.4947830715108!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4741dc41c012e5d5%3A0x97fe3e2b3c6d8314!2zRGXDoWsgRmVyZW5jIHV0Y2EgMTcsIDEwNTIgQnVkYXBlc3QsIEh1bmdhcnk!5e0!3m2!1sen!2sus!4v1716263765176!5m2!1sen!2sus";
    
    if (londonBtn && budapestBtn && mapIframe) {
      // London office button
      londonBtn.addEventListener('click', () => {
        mapIframe.src = londonMapUrl;
        londonBtn.classList.remove('bg-gray-200', 'text-gray-700');
        londonBtn.classList.add('bg-brand-primary', 'text-white');
        budapestBtn.classList.remove('bg-brand-primary', 'text-white');
        budapestBtn.classList.add('bg-gray-200', 'text-gray-700');
      });
      
      // Budapest office button
      budapestBtn.addEventListener('click', () => {
        mapIframe.src = budapestMapUrl;
        budapestBtn.classList.remove('bg-gray-200', 'text-gray-700');
        budapestBtn.classList.add('bg-brand-primary', 'text-white');
        londonBtn.classList.remove('bg-brand-primary', 'text-white');
        londonBtn.classList.add('bg-gray-200', 'text-gray-700');
      });
    }
    
    // Fullscreen button
    if (fullscreenBtn && mapIframe) {
      fullscreenBtn.addEventListener('click', () => {
        if (mapIframe.requestFullscreen) {
          mapIframe.requestFullscreen();
        } else if (mapIframe.webkitRequestFullscreen) {
          mapIframe.webkitRequestFullscreen();
        } else if (mapIframe.msRequestFullscreen) {
          mapIframe.msRequestFullscreen();
        }
      });
    }
  });
</script>

      <!-- Call to action -->
      <div class="mt-12 text-center">
        <p class="text-gray-700 mb-4">Need help or have questions?</p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/contact-us" class="inline-block bg-brand-primary text-white font-bold px-6 py-3 rounded-lg shadow hover:bg-brand-primary/90 transition">
            Contact Us
          </a>
          <a href="/book-personalised-call" class="inline-block bg-brand-accent text-white font-bold px-6 py-3 rounded-lg shadow hover:bg-brand-accent/90 transition">
            Book a Personalised Call
          </a>
        </div>
      </div>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout>
