---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Register - Screen HRM">
  <Header slot="header" />
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Create Your Account</h1>
        <form class="space-y-6">
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700">Company Name</label>
            <input
              type="text"
              id="company"
              name="company"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary"
              required
            />
          </div>
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary"
              required
            />
          </div>
          <button
            type="submit"
            class="w-full bg-brand-primary text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors"
          >
            Register
          </button>
        </form>
        <p class="mt-4 text-center text-sm text-gray-600">
          Already have an account? <a href="#" class="text-brand-primary hover:text-blue-700">Sign in</a>
        </p>
      </div>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout> 