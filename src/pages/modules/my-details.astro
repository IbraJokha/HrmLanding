---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---
<BaseLayout title="My Details - Screen HRM">
  <Header slot="header" />
  <section class="bg-gradient-to-br from-[#eaf0ff] via-[#f4f7fe] to-[#eaf0ff]">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl md:text-6xl font-extrabold text-brand-dark mb-6 text-center">
        My Details Module
      </h1>
      
      <!-- Screenshot showcase - Full width, no overlay -->
      <div class="relative mb-10 max-w-[1600px] mx-auto">
        <div class="transition-transform duration-300 hover:scale-[1.02]">
          <img
            src="/my_details_ss.jpg"
            alt="My Details Screenshot"
            class="w-full rounded-3xl shadow-2xl border-4 border-white object-contain transition-all duration-300"
            style="background: #f8fafc;"
            loading="lazy"
          />
        </div>
      </div>
      
      <!-- Content beneath the screenshot -->
      <div class="max-w-5xl mx-auto">
        <!-- Feature highlights with gradient borders -->
        <div class="grid md:grid-cols-2 gap-6 mb-12">
          <div class="bg-white rounded-2xl shadow-lg p-8 border-t-4 border-blue-400">
            <h3 class="text-2xl font-bold text-brand-primary mb-4">Personal Information</h3>
            <p class="text-gray-700 mb-3">
              View and edit your personal details, including contact information, address, and emergency contacts.
            </p>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-8 border-t-4 border-purple-400">
            <h3 class="text-2xl font-bold text-brand-primary mb-4">Job Details</h3>
            <p class="text-gray-700 mb-3">
              Access your employment information, position details, reporting structure, and work history.
            </p>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-8 border-t-4 border-green-400">
            <h3 class="text-2xl font-bold text-brand-primary mb-4">Document Management</h3>
            <p class="text-gray-700 mb-3">
              Upload, store and manage important personal documents securely in one place.
            </p>
          </div>
          
          <div class="bg-white rounded-2xl shadow-lg p-8 border-t-4 border-amber-400">
            <h3 class="text-2xl font-bold text-brand-primary mb-4">Self-Service Updates</h3>
            <p class="text-gray-700 mb-3">
              Make changes to your information directly, reducing administration and ensuring data accuracy.
            </p>
          </div>
        </div>
        
        <!-- Description section -->
        <div class="bg-white/90 backdrop-blur rounded-3xl shadow-xl p-8 md:p-12">
          <h2 class="text-3xl font-bold text-brand-dark mb-6">Complete Employee Self-Service</h2>
          <p class="text-lg text-gray-700 mb-6">
            The My Details module in Screen HRM gives every employee a secure, self-service portal to view and manage their personal and professional information. Instantly access and update your contact details, job info, emergency contacts, and moreâ€”all in one place.
          </p>
          <p class="text-lg text-gray-700 mb-8">
            This module keeps your HR records accurate and empowers your team to take control of their own data, reducing admin for HR and boosting transparency.
          </p>
          
          <div class="flex justify-center">
            <a href="/book-discovery-call" class="inline-block bg-brand-primary text-white font-bold px-6 py-3 rounded-lg shadow hover:bg-brand-accent transition">
              Book a Discovery Call
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout>