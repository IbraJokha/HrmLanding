<section class="relative py-24 overflow-hidden bg-gradient-to-b from-white via-brand-light/30 to-white">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-brand-primary/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-brand-accent/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-brand-primary/5 rounded-full blur-3xl animate-float"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-brand-dark mb-6">
        Why <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-accent">10,000+ Companies</span> Choose Screen HRM
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Transform your HR operations with a platform that's powerful enough for enterprises, yet simple enough for startups
      </p>
    </div>

    <!-- Stats Row -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-20">
      <div class="text-center" data-aos="fade-up" data-aos-delay="100">
        <div class="text-5xl md:text-6xl font-extrabold text-brand-primary mb-2 counter" data-target="98">0</div>
        <div class="text-gray-600 font-medium">Customer Satisfaction</div>
      </div>
      <div class="text-center" data-aos="fade-up" data-aos-delay="200">
        <div class="text-5xl md:text-6xl font-extrabold text-brand-accent mb-2 counter" data-target="50">0</div>
        <div class="text-gray-600 font-medium">Hours Saved Weekly</div>
      </div>
      <div class="text-center" data-aos="fade-up" data-aos-delay="300">
        <div class="text-5xl md:text-6xl font-extrabold text-brand-primary mb-2"><span class="counter" data-target="10">0</span>k+</div>
        <div class="text-gray-600 font-medium">Active Companies</div>
      </div>
      <div class="text-center" data-aos="fade-up" data-aos-delay="400">
        <div class="text-5xl md:text-6xl font-extrabold text-brand-accent mb-2"><span class="counter" data-target="24">0</span>/7</div>
        <div class="text-gray-600 font-medium">Support Available</div>
      </div>
    </div>

    <!-- Feature Grid -->
    <div class="grid md:grid-cols-3 gap-8 mb-20">
      <!-- Card 1 -->
      <div class="group relative" data-aos="fade-up" data-aos-delay="100">
        <div class="absolute inset-0 bg-gradient-to-r from-brand-primary to-brand-accent rounded-2xl blur-xl opacity-0 group-hover:opacity-70 transition-opacity duration-500"></div>
        <div class="relative bg-white rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-brand-primary to-brand-accent rounded-xl flex items-center justify-center mb-6 transform transition-transform group-hover:scale-110 group-hover:rotate-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-dark mb-4">Lightning Fast Setup</h3>
          <p class="text-gray-600 mb-4">Get your entire team onboarded in under 30 minutes. No technical expertise required.</p>
          <div class="flex items-center text-brand-primary font-semibold group-hover:text-brand-accent transition-colors">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="group relative" data-aos="fade-up" data-aos-delay="200">
        <div class="absolute inset-0 bg-gradient-to-r from-brand-accent to-purple-500 rounded-2xl blur-xl opacity-0 group-hover:opacity-70 transition-opacity duration-500"></div>
        <div class="relative bg-white rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-brand-accent to-purple-500 rounded-xl flex items-center justify-center mb-6 transform transition-transform group-hover:scale-110 group-hover:rotate-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-dark mb-4">Save 70% on HR Costs</h3>
          <p class="text-gray-600 mb-4">Automate repetitive tasks and reduce administrative overhead significantly.</p>
          <div class="flex items-center text-brand-accent font-semibold group-hover:text-purple-600 transition-colors">
            <span>Calculate savings</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="group relative" data-aos="fade-up" data-aos-delay="300">
        <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-brand-primary rounded-2xl blur-xl opacity-0 group-hover:opacity-70 transition-opacity duration-500"></div>
        <div class="relative bg-white rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-brand-primary rounded-xl flex items-center justify-center mb-6 transform transition-transform group-hover:scale-110 group-hover:rotate-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-brand-dark mb-4">Enterprise-Grade Security</h3>
          <p class="text-gray-600 mb-4">Bank-level encryption and compliance with global data protection standards.</p>
          <div class="flex items-center text-green-600 font-semibold group-hover:text-brand-primary transition-colors">
            <span>Security features</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Testimonial Carousel -->
    <div class="relative max-w-4xl mx-auto" data-aos="fade-up">
      <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-12 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-brand-primary/10 rounded-full -mr-16 -mt-16"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-brand-accent/10 rounded-full -ml-12 -mb-12"></div>
        
        <div class="relative z-10">
          <svg class="w-12 h-12 text-brand-primary mb-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>
          
          <p class="text-2xl text-gray-800 mb-8 italic">
            "Screen HRM transformed how we manage our 500+ employees. What used to take days now takes minutes. The ROI was immediate."
          </p>
          
          <div class="flex items-center">
            <img src="https://i.pravatar.cc/60?img=1" alt="Customer" class="w-16 h-16 rounded-full mr-4" />
            <div>
              <h4 class="font-bold text-brand-dark">Sarah Mitchell</h4>
              <p class="text-gray-600">HR Director, TechCorp Global</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    @keyframes float {
      0%, 100% {
        transform: translate(-50%, -50%) translateY(0px);
      }
      50% {
        transform: translate(-50%, -50%) translateY(-20px);
      }
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
    
    @keyframes counter {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .counter {
      display: inline-block;
      animation: counter 0.5s ease-out;
    }
  </style>

  <script>
    // Animate numbers on scroll
    document.addEventListener('DOMContentLoaded', () => {
      const counters = document.querySelectorAll('.counter');
      const speed = 200;
      
      const animateCounter = (counter) => {
        const target = +counter.getAttribute('data-target');
        const increment = target / speed;
        
        const updateCounter = () => {
          const current = +counter.innerText;
          
          if (current < target) {
            counter.innerText = Math.ceil(current + increment);
            setTimeout(updateCounter, 1);
          } else {
            counter.innerText = target;
          }
        };
        
        updateCounter();
      };
      
      // Intersection Observer for counter animation
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            animateCounter(entry.target);
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5 });
      
      counters.forEach(counter => {
        observer.observe(counter);
      });
    });
  </script>
</section>
	<Overview />
	<Modules />
	<Footer slot="footer" />
</BaseLayout>
