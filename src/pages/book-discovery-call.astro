---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const benefits = [
  "Personalized walkthrough of the platform",
  "Assessment of your specific HR needs",
  "Custom implementation recommendations",
  "Pricing and plan options discussion",
  "Q&A with our product specialists"
];
---

<BaseLayout title="Book a Discovery Call - Screen HRM">
  <Header slot="header" />
  
  <section class="bg-gradient-to-b from-brand-primary/90 to-brand-accent/90 py-20 text-white">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6">
        Book Your Free Discovery Call
      </h1>
      <p class="text-xl max-w-2xl mx-auto text-white/90">
        Let our product specialists show you how Screen HRM can transform your HR operations in just 30 minutes
      </p>
    </div>
  </section>
  
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <div class="lg:w-1/2">
          <h2 class="text-3xl font-bold mb-6 text-brand-dark">What to Expect</h2>
          
          <div class="bg-white rounded-xl shadow-md p-8 mb-8">
            <ul class="space-y-4">
              {benefits.map(benefit => (
                <li class="flex items-start">
                  <div class="flex-shrink-0 w-6 h-6 rounded-full bg-brand-primary/10 flex items-center justify-center mt-1">
                    <svg class="w-4 h-4 text-brand-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="ml-3 text-gray-700">{benefit}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <div class="bg-brand-light rounded-xl p-6">
            <div class="flex items-start mb-4">
              <div class="w-10 h-10 rounded-full bg-brand-primary flex items-center justify-center text-white font-bold mr-4 flex-shrink-0">
                <span>TIP</span>
              </div>
              <p class="text-gray-700">
                <span class="font-bold">Prepare for your call:</span> Think about your current HR challenges and goals so our team can provide specific guidance for your organization.
              </p>
            </div>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <div class="bg-white rounded-xl shadow-md p-6 md:p-8 overflow-hidden">
            <h2 class="text-2xl font-bold mb-6 text-brand-dark">Select a Time</h2>
            
            <!-- Calendly inline widget begin -->
