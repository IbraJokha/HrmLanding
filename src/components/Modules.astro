      <h3 class="font-semibold text-xl mb-6 text-gray-600">Additional Modules</h3>
      <div class="grid gap-4 grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 xl:grid-cols-6">
        {modules.filter(m => !m.featured).map((module) => (
          module.enabled ? (
            <a href={`/modules/${module.slug}`} class="bg-white p-4 rounded-lg shadow hover:shadow-md transition flex flex-col items-center text-center hover:bg-gray-50">
              <div class="text-3xl mb-2">{module.icon}</div>
              <h3 class="text-sm font-medium text-gray-800">{module.title}</h3>
              {module.features && (
                <ul class="text-gray-500 text-xs space-y-1 mt-1">
                  {module.features.map((f) => (
                    <li>â€¢ {f}</li>
