<section class="bg-brand-light py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 text-brand-dark">Modular Solutions</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Pick exactly what you need and leave behind anything you don't. Our modules are designed to solve your biggest HR problemsâ€”start with what you need now and add as you grow.
      </p>
    </div>

    {/* Featured Modules - First Row */}
    <div class="mb-10">
      <h3 class="font-semibold text-xl mb-6 text-brand-primary">Core Modules</h3>
      <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-5">
        {modules.filter(m => m.featured).map((module) => (
          module.enabled ? (
            <a href={`/modules/${module.slug}`} class="bg-white p-6 sm:p-8 rounded-xl shadow-lg hover:shadow-xl transition flex flex-col items-center text-center hover:ring-2 hover:ring-brand-primary focus:outline-none group border border-brand-primary/20">
              <div class="text-5xl mb-4 group-hover:scale-110 transition-transform">{module.icon}</div>
              <h3 class="text-xl font-bold mb-3 text-brand-dark">{module.title}</h3>
              <div class="bg-brand-primary/10 text-brand-primary text-xs font-medium px-3 py-1 rounded-full">Featured</div>
            </a>
          ) : (
            <div
              tabindex="0"
              class="bg-white p-6 sm:p-8 rounded-xl shadow-lg hover:shadow-xl transition flex flex-col items-center text-center hover:ring-2 hover:ring-brand-primary focus:outline-none group border border-brand-primary/20 cursor-pointer"
              onClick={(e) => e.preventDefault()}
              onKeyDown={(e) => e.preventDefault()}
            >
              <div class="text-5xl mb-4 group-hover:scale-110 transition-transform">{module.icon}</div>
              <h3 class="text-xl font-bold mb-3 text-brand-dark">{module.title}</h3>
              <div class="bg-brand-primary/10 text-brand-primary text-xs font-medium px-3 py-1 rounded-full">Featured</div>
            </div>
          )
        ))}
      </div>
    </div>
    
    {/* Additional Modules */}
